<div class='row'>
  <div class='col-lg-10'>
  <h2>Posts</h2>

  <%= for post <- @posts do %>
    <h3><%= show_post_path(@conn, post) %></h3>
    <p><%= post.short_description %></p>
    <hr>
  <% end %>
  </div>

  <div class='col-lg-2'>
    <%= link "New Post", to: post_path(@conn, :new), class: 'btn btn-success btn-lg' %>
  </div>
</div>
