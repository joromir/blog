<div class='row'>
  <div class='col-lg-8'>
    <h2><%= @post.title %></h2>

    <p><%= @post.short_description %></p>

    <p><%= @post.body %></p>
  </div>

  <div class='col-lg-4'>
    <h4>Actions</h4>

    <ul>
      <li><%= link "Edit", to: post_path(@conn, :edit, @post) %></li>
      <li><%= link "Delete", to: "#" %></li>
    </ul>
  </div>
</div>
